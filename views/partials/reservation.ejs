<div class="row mt-5">
    <div class="col-md-5 m-auto">
        <div class="card card-body border-primary mb-3">
            <h1 class="text-center mb-3">
                <i class="fas fa-glass-cheers"></i> Make a reservation
            </h1>
            <form action="/reservation" method="POST">
                <%- include ("./messages.ejs") %>
                <div class="form-group party-size">
                    <div class="reservation-size">
                        <label for="party-size-label">Party size: </label>
                        <select id="party-size-label" class="custom-select" name="guestAmount">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                        </select>
                    </div>
                </div>

                <!-- TODO: add validation to working hours  -->

                <div class="reservation-data">
                    <div class="form-group reservation-date">
                        <label for="reservation-date">Date:</label>
                        <input
                                class="form-control"
                                id="reservation-date"
                                type="date"
                                name="reservationDate"
                                value="<%= typeof reservationDate != 'undefined' ? reservationDate : '' %>"
                        >
                    </div>

                    <div class="form-group reservation-time">
                        <label for="reservation-time">Time:</label>
                        <input class="form-control"
                               id="reservation-time"
                               type="time"
                               name="reservationTime"
                               min="09:00"
                               max="22:00"
                               value="<%= typeof reservationTime != 'undefined' ? reservationTime : '' %>"
                               required>
                    </div>
                </div>
                <div class="form-group">
                    <input
                            class="form-control"
                            id="restaurantId"
                            type="number"
                            name="restaurantId"
                            value="<%= typeof reservationDate != 'undefined' ? reservationDate : '' %>"
                    >
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    Find a table
                </button>

            </form>
        </div>
    </div>
</div>
<script type="module" src="/public/javascript/Header.js"></script>

